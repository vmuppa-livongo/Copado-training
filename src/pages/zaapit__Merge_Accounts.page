<apex:page standardController="account" recordSetVar="accounts" extensions="zaapit.GenListController">

<script>
var  listView1='{!JSENCODE(LastListView)}';
var gotoURL="/one/one.app#/sObject/{!JSENCODE(ObjectName)}/list?filterName="+listView1+"&t="+new Date().getTime();
if(document.referrer.indexOf("lightning.force.")==-1){
    gotoURL="/{!JSENCODE(ObjectPrefix)}?fcf="+listView1.substring(0,15);
}


var checkedIds=""; 
var checkedId1=""; 
var accName=""; 
var leadCount=0; 
 <apex:repeat var="a" value="{!cont.selected}">
checkedId1="{!a.id}"; 
accName="{!a['name']}"; 
checkedIds+="&cid="+checkedId1; 
leadCount++; 
</apex:repeat>

if(leadCount>3){ 
alert("Please select up to 3 Accounts to merge!"); 
window.history.back();
}else if(leadCount<2){ 
alert("Please select at least 2 Accounts to merge!"); 
window.history.back();
}else{ 
var win1=window.open("/merge/accmergewizard.jsp?currentStage=0&goNext=Next&buttonPressed=0&currentStage=0&srchbutton=Find Accounts"+checkedIds+"&retURL=%2Fapex%2Fzaapit__Merge_Completed&isdtp=p1&srch="+escape(accName),"Merge_Leads","height=800,width=800,top=100,left=100,fullscreen=0,scrollbars=yes"); 

var timer = setInterval(function() { 
if(win1.closed) { 
clearInterval(timer); 
//$(".seatchInptFZP").keyup(); 
//jumpToClk(currPageCls,600); 
window.top.location=gotoURL;
} 
}, 1000); 
} 

//return false;
</script>

<style>
.loading{height:125px;}
.hd1{display:none;}
</style>
<div class="loading">
<div style="font-size: 15px;text-align: center;display: inline-block;margin-top: 48px;background: url('/img/loading.gif') 0 0 no-repeat;padding-left:25px;">Running process...
<div style="font-size: 10px;text-align: center;margin-top: 10px;font-weight:normal;">Make sure popups are enabled...</div>
</div>
</div>

</apex:page>