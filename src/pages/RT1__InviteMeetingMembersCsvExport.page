<apex:page standardController="RT1__ReadyTalkMeeting__c"
	tabStyle="Readytalk__tab" extensions="RT1.MeetingMemberCSVController">
	<apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" />
	<apex:form >
		<apex:actionFunction name="download" action="{!download}" />
	<script language="JavaScript">
	var $j = jQuery.noConflict();
	$j(function() {
	   download();
	});
	</script>
		<style type="text/css">
/** 
 *	Wanted to get SFDC VF Default theme to give me some spacing near the top of the page
 **/
.apexDefaultPageBlock {
	margin-top: 4px !important;
}
</style>
		<apex:pageBlock >
			<h1 style="padding-bottom: 10px; display: block; font-size: 140%;">
				Meeting:&nbsp;
				<apex:outputText value="{!RT1__ReadyTalkMeeting__c.Name}" />
			</h1>
			<p style="margin-bottom: 10px;">Your download will begin shortly.
			</p>
			<p style="margin-bottom: 10px;">
				<apex:inputCheckbox id="updateMemberStatusField"
					value="{!UpdateMemberStatus}" />
				<apex:outputLabel for="updateMemberStatusField"
					value="Update members' status to Invited" />
			</p>
			<apex:commandButton value=" Return to Meeting " action="{!done}" />
		</apex:pageBlock>
	</apex:form>
</apex:page>